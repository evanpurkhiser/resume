{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume",
  "description": "Schema for resume.yaml",
  "type": "object",
  "required": ["personal", "skills", "experience"],
  "properties": {
    "personal": {
      "type": "object",
      "required": ["name", "title", "email"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full name"
        },
        "title": {
          "type": "string",
          "description": "Professional title"
        },
        "location": {
          "type": "string",
          "description": "Current location"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Personal website URL"
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "LinkedIn profile URL"
        },
        "phoneLastFour": {
          "type": "string",
          "pattern": "^[0-9]{4}$",
          "description": "Last four digits of phone number"
        }
      }
    },
    "skills": {
      "type": "array",
      "description": "List of skill categories",
      "items": {
        "type": "object",
        "required": ["category", "items"],
        "properties": {
          "category": {
            "type": "string",
            "description": "Skill category name"
          },
          "items": {
            "type": "array",
            "description": "List of skills in this category",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "experience": {
      "type": "array",
      "description": "Work experience history",
      "items": {
        "type": "object",
        "required": ["company", "title", "dates", "sections"],
        "properties": {
          "company": {
            "type": "string",
            "description": "Company name"
          },
          "title": {
            "type": "string",
            "description": "Job title"
          },
          "dates": {
            "type": "object",
            "required": ["start"],
            "properties": {
              "start": {
                "type": "string",
                "format": "date",
                "description": "Start date in YYYY-MM-DD format (e.g., '2017-08-01')"
              },
              "end": {
                "type": "string",
                "format": "date",
                "description": "End date in YYYY-MM-DD format (e.g., '2020-08-01'). Omit this field if position is current."
              }
            }
          },
          "sections": {
            "type": "array",
            "description": "Sections of work organized by theme or area",
            "items": {
              "type": "object",
              "required": ["bullets"],
              "properties": {
                "heading": {
                  "type": "string",
                  "description": "Optional section heading (e.g., 'Product Development', 'Frontend Infrastructure')"
                },
                "bullets": {
                  "type": "array",
                  "description": "List of accomplishments or responsibilities",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "description": "Personal or side projects",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Project name"
          },
          "website": {
            "type": "string",
            "format": "uri",
            "description": "Project website URL"
          },
          "links": {
            "type": "array",
            "description": "Related links or repositories",
            "items": {
              "type": "object",
              "required": ["name", "url"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Link name or label"
                },
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Link URL"
                }
              }
            }
          },
          "description": {
            "type": "string",
            "description": "Project description"
          }
        }
      }
    }
  }
}
