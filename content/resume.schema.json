{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume",
  "description": "Schema for resume.yaml",
  "type": "object",
  "required": ["personal", "skills", "education", "experience", "projects"],
  "properties": {
    "personal": {
      "$ref": "#/definitions/Personal"
    },
    "skills": {
      "type": "array",
      "description": "List of skill categories",
      "items": {
        "$ref": "#/definitions/SkillCategory"
      }
    },
    "education": {
      "$ref": "#/definitions/Education"
    },
    "experience": {
      "type": "array",
      "description": "Work experience history",
      "items": {
        "$ref": "#/definitions/Experience"
      }
    },
    "projects": {
      "type": "array",
      "description": "Personal or side projects",
      "items": {
        "$ref": "#/definitions/Project"
      }
    }
  },
  "definitions": {
    "Personal": {
      "type": "object",
      "required": ["name", "title", "email"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full name"
        },
        "title": {
          "type": "string",
          "description": "Professional title"
        },
        "location": {
          "type": "string",
          "description": "Current location"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Personal website URL"
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "LinkedIn profile URL"
        },
        "phoneLastFour": {
          "type": "string",
          "pattern": "^[0-9]{4}$",
          "description": "Last four digits of phone number"
        }
      }
    },
    "SkillCategory": {
      "type": "object",
      "required": ["category", "items"],
      "properties": {
        "category": {
          "type": "string",
          "description": "Skill category name"
        },
        "items": {
          "type": "array",
          "description": "List of skills in this category",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "DateRange": {
      "type": "object",
      "required": ["start"],
      "properties": {
        "start": {
          "type": "string",
          "format": "date",
          "description": "Start date in YYYY-MM-DD format (e.g., '2017-08-01')"
        },
        "end": {
          "type": "string",
          "format": "date",
          "description": "End date in YYYY-MM-DD format (e.g., '2020-08-01'). Omit this field if position is current."
        }
      }
    },
    "Education": {
      "type": "object",
      "required": ["degree", "institution", "dates"],
      "properties": {
        "degree": {
          "type": "string",
          "description": "Degree earned"
        },
        "institution": {
          "type": "string",
          "description": "Educational institution"
        },
        "dates": {
          "$ref": "#/definitions/DateRange"
        }
      }
    },
    "ExperienceSection": {
      "type": "object",
      "required": ["bullets"],
      "properties": {
        "heading": {
          "type": "string",
          "description": "Optional section heading (e.g., 'Product Development', 'Frontend Infrastructure')"
        },
        "bullets": {
          "type": "array",
          "description": "List of accomplishments or responsibilities",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Experience": {
      "type": "object",
      "required": ["company", "title", "dates", "sections"],
      "properties": {
        "company": {
          "type": "string",
          "description": "Company name"
        },
        "title": {
          "type": "string",
          "description": "Job title"
        },
        "dates": {
          "$ref": "#/definitions/DateRange"
        },
        "description": {
          "type": "string",
          "description": "Optional description of the role or company"
        },
        "sections": {
          "type": "array",
          "description": "Sections of work organized by theme or area",
          "items": {
            "$ref": "#/definitions/ExperienceSection"
          }
        }
      }
    },
    "ProjectLink": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Link name or label"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Link URL"
        }
      }
    },
    "Project": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "links": {
          "type": "array",
          "description": "Related links or repositories",
          "items": {
            "$ref": "#/definitions/ProjectLink"
          }
        },
        "description": {
          "type": "string",
          "description": "Project description"
        }
      }
    }
  }
}
